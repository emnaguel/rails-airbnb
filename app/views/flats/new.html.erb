<h1>Add a new Flat</h1>

<%= simple_form_for(@flat) do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- [...] all the fields -->
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit "Create Flat", class: "btn btn-primary" %>
  <%= link_to "Cancel", flats_path %>
<% end %>
